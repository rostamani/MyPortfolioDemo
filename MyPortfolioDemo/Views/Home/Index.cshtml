@model List<Portfolio>

@{
    ViewData["Title"] = "صفحه اصلی سایت";
}


<section id="one">
    <header class="major">
        <h2>
           @ViewBag.Title
        </h2>
    </header>
    <p>
        @ViewBag.Text
    </p>
</section>

<section id="two">
    <h2>نمونه کارهای اخیر</h2>
    <div class="row">

        @foreach (var portfolio in Model)
        {
            <article class="6u 12u$(xsmall) work-item" style="width: 33%;">
                <a href="~/images/thumbs/@portfolio.ImageName" class="image fit thumb" alt="@portfolio.Title" title="@portfolio.Description">
                    <img src="~/images/thumbs/@portfolio.ImageName" alt="@portfolio.Title" title="@portfolio.Description" />
                </a>
                <h3>@portfolio.Title</h3>
                <p>@portfolio.Description</p>
            </article>
        }

    </div>
</section>